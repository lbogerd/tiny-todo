{
	"name": "tiny-todo",
	"displayName": "TinyTodo",
	"description": "A tiny todo list in VS Code itself.",
	"publisher": "wtrndev",
	"version": "0.1.3",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lbogerd/tiny-todo.git"
	},
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "tinyTodoView",
					"name": "Tiny Todo"
				}
			]
		},
		"commands": [
			{
				"command": "tinyTodo.refresh",
				"title": "Refresh",
				"icon": "$(sync)"
			},
			{
				"command": "tinyTodo.completeTask",
				"title": "Complete Task"
			},
			{
				"command": "tinyTodo.addTodo",
				"title": "Add Todo",
				"icon": "$(add)"
			},
			{
				"command": "tinyTodo.archiveTasks",
				"title": "Archive Completed Tasks",
				"icon": "$(archive)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "tinyTodo.refresh",
					"when": "view == tinyTodoView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "tinyTodo.archive",
					"when": "view == tinyTodoView && viewItem == todoItem",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"package": "pnpm vsce package --no-dependencies",
		"publish": "pnpm vsce publish --no-dependencies",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.85.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"typescript": "^5.3.3",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.8"
	},
	"packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
